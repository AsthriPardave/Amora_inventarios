<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Amora Inventarios</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="container">
        <div class="page-header">
            <h1>üì¶ Lista de Productos</h1>
            <div class="header-actions">
                <a href="/productos/registrar" class="btn btn-primary">
                    ‚ûï Nuevo Producto
                </a>
            </div>
        </div>

        <% if (productos.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">üì¶</div>
                <h3>No hay productos registrados</h3>
                <p>Comienza agregando tu primer producto al stock</p>
                <a href="/productos/registrar" class="btn btn-primary">
                    ‚ûï Registrar Primer Producto
                </a>
            </div>
        <% } else { %>
            <div class="card">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Modelo</th>
                                <th>üìè Tallas Disponibles</th>
                                <th>üìä Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productos.forEach((producto, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><strong><%= producto.modelo %></strong></td>
                                    <td>
                                        <div style="display: flex; flex-wrap: wrap; gap: 0.25rem;">
                                            <% Object.entries(producto.tallas).forEach(([talla, cantidad]) => { %>
                                                <span class="talla-badge talla-badge-entra" 
                                                      title="Talla <%= talla %>: <%= cantidad %> unidades"
                                                      style="font-size: 0.85rem; padding: 0.25rem 0.5rem;">
                                                    <%= talla %>
                                                </span>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (producto.totalUnidades === 0) { %>
                                            <span class="badge badge-danger">Agotado</span>
                                        <% } else if (producto.totalUnidades <= 3) { %>
                                            <span class="badge badge-warning"><%= producto.totalUnidades %> unidades</span>
                                        <% } else { %>
                                            <span class="badge badge-success"><%= producto.totalUnidades %> unidades</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="stats-row">
                    <div class="stat-item">
                        <strong>Total Productos</strong>
                        <span><%= productos.length %></span>
                    </div>
                    <div class="stat-item">
                        <strong>Total Unidades</strong>
                        <span><%= productos.reduce((sum, p) => sum + p.totalUnidades, 0) %></span>
                    </div>
                </div>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/main.js"></script>
</body>
</html>
